APP_NAME="VideoGen SaaS"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=http://localhost
APP_LOCALE=en
APP_FALLBACK_LOCALE=en_US
APP_FAKER_LOCALE=en_US
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=aivideo
DB_USERNAME=root
DB_PASSWORD=

# Session & Cache
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
CACHE_STORE=database

# Queue
QUEUE_CONNECTION=database

# Broadcasting
BROADCAST_CONNECTION=pusher

# Filesystem
FILESYSTEM_DISK=local

# Redis (Optional)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Memcached (Optional)
MEMCACHED_HOST=127.0.0.1

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@videoai.com
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher Configuration (Optional)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Vite
VITE_APP_NAME="${APP_NAME}"

# =============================================================================
# VIDEO PROVIDERS CONFIGURATION
# =============================================================================

# Default Provider
DEFAULT_VIDEO_PROVIDER=veo3

# Global Provider Settings
MAX_CONCURRENT_GENERATIONS=10
WEBHOOK_TIMEOUT=30
STATUS_CHECK_INTERVAL=60
MAX_RETRIES=3
CLEANUP_FAILED_JOBS_AFTER=24

# Veo3 (Google) Configuration
VEO3_ENABLED=true
VEO3_API_KEY=
VEO3_API_URL=https://api.veo3.com/v1
VEO3_WEBHOOK_SECRET=
VEO3_TEST_MODE=false
VEO3_MAX_DURATION=30

# Luma AI Dream Machine Configuration
LUMA_ENABLED=true
LUMA_API_KEY=
LUMA_API_URL=https://api.lumalabs.ai/dream-machine/v1
LUMA_WEBHOOK_SECRET=
LUMA_TEST_MODE=false
LUMA_MAX_DURATION=30

# Runway ML Gen-3 Configuration
RUNWAY_ENABLED=false
RUNWAY_API_KEY=
RUNWAY_API_URL=https://api.runwayml.com/v1
RUNWAY_WEBHOOK_SECRET=
RUNWAY_TEST_MODE=false
RUNWAY_MAX_DURATION=16

# Pika Labs Configuration
PIKA_ENABLED=false
PIKA_API_KEY=
PIKA_API_URL=https://api.pika.art/v1
PIKA_WEBHOOK_SECRET=
PIKA_TEST_MODE=false
PIKA_MAX_DURATION=8

# Stripe Payment Configuration
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=
STRIPE_CURRENCY=USD

# License Configuration (Auto-filled during installation)
LICENSE_PURCHASE_CODE=
